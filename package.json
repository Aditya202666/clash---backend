{
  "name": "server",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node ./dist/server.js",
    "server": "nodemon ./dist/server.js",
    "watch": "tsc -w",
    "build": "tsc && npm run copy-files",
    "dev": "concurrently \"npm run watch\" \"npm run watch-views\" \"npm run server\" ",
    "copy-files": "copyfiles -u 1 \"src/views/**/*\" dist/ ",
    "watch-views": "nodemon --watch src/views -e ejs -x \"npm run copy-files\" "

  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "prisma": "^6.12.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "concurrently": "^9.2.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.10",
    "typescript": "^5.8.3"
  }
}
