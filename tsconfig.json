{
  "compilerOptions": {

    
    "target": "es2020",
    "lib": ["ES2020"],
    "module": "node16",
    "rootDirs": ["./src"],
    "moduleResolution": "node16",
    // "types": ["node"],
    "outDir": "./dist",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "src/custom-types.d.ts"]
}
